rule Compress:
  input: 
    expand('{VMCDIR}/macros/data/{{output_dir}}/Group_{job_id}_ParticleType_{{particle_type}}_s{run_id}.reco.v1.04.conc.root', VMCDIR=vmc_dir, job_id=range(cal_times_per_particle), run_id=range(num_threads_per_reco_job))
  output:
    expand('{VMCDIR}/macros/data/{{output_dir}}/Embed_ParticleType_{{particle_type}}.root', VMCDIR=vmc_dir)
  params:
    fragMass = lambda wildcards: ParticleMass[ParticleName.index(wildcards.particle_type)],
    charge = lambda wildcards: ParticleCharge[ParticleName.index(wildcards.particle_type)],
    targetMass = targ_mass,
    energyPerN = energy_per_N*1000, #To MeV
  shell:
    '''
    root -b -l -q -e 'EfficiencyInCMFactory::TransformBackToCM("data/{wildcards.output_dir}/Group_*_ParticleType_{wildcards.particle_type}_s*.reco.v1.04.conc.root", "{output}",{params.fragMass},{params.targetMass},{params.charge},{params.energyPerN});abort()' || true
    '''

rule run_reco_new:
  input:
    expand('{VMCDIR}/macros/data/{{output_dir}}/Group_{{job_id}}_ParticleType_{{particle_type}}_SARR_{id}.digi.root', VMCDIR=vmc_dir, id=['%02d' % i for i in range(0, num_threads_per_job)]),
    digi = expand('{VMCDIR}/macros/data/{bg_dir}/{bg_name}_evts{bg_events}x{bg_threads}_merged.digi.root',VMCDIR=vmc_dir, bg_dir=dir_to_bg, bg_name=filename_bg_source, bg_events=evt_per_jobs, bg_threads = num_threads_per_bg_generation)
  output:
    temp(expand('{VMCDIR}/macros/data/{{output_dir}}/Group_{{job_id}}_ParticleType_{{particle_type}}_s{{run_id}}.reco.v1.04.root', VMCDIR=vmc_dir)),
    expand('{VMCDIR}/macros/data/{{output_dir}}/Group_{{job_id}}_ParticleType_{{particle_type}}_s{{run_id}}.reco.v1.04.conc.root', VMCDIR=vmc_dir),
  resources:
    cpu=1
  params:
    threads = num_threads_per_reco_job-1,
    ntotal = tot_events,
    nsplit = int((tot_events + num_threads_per_reco_job -1)/num_threads_per_reco_job),
    input_name = lambda wildcards: '%s/macros/data/%s/Group_%s_ParticleType_%s_SARR' % (vmc_dir, wildcards.output_dir, wildcards.job_id, wildcards.particle_type),
    output_dir = lambda wildcards: '%s/Group_%s_ParticleType_%s' % (wildcards.output_dir, wildcards.job_id, wildcards.particle_type),
    parDigiPath = lambda wildcards, input: str(input.digi).replace(vmc_dir + '/macros/data/', '').replace('.digi.root', ''),
    parParameterFile = ParameterFile,
    log_dir = log_dir,
    num_id = lambda wildcards: int(str(wildcards.run_id)),
    beam_rate = space_charge, 
    job_id = lambda wildcards: wildcards.job_id
  shell:
    """
    i={params.num_id}
    LOGDIR={params.log_dir}/{wildcards.output_dir}/Group_{wildcards.job_id}_ParticleType_{wildcards.particle_type}_SARR_{wildcards.job_id}
    root.exe -b -q -l 'run_reco_mc.C("{params.parDigiPath}",
                                     "{params.output_dir}",
                                     {params.ntotal},
                                     '$i',
                                     {params.nsplit},
                                     30,
                                     "{params.parParameterFile}",
                                     "{params.input_name}_*.digi.root")' > ${{LOGDIR}}_${{i}}_reco.log
    """

rule run_mc_new:
  input:
    par = expand('{VMCDIR}/macros/data/{{output_dir}}/ParticleType_{{particle_type}}_par.dat', VMCDIR=vmc_dir),
    digi = expand('{VMCDIR}/macros/data/{bg_dir}/{bg_name}_evts{bg_events}x{bg_threads}_merged.digi.root',VMCDIR=vmc_dir, bg_dir=dir_to_bg, bg_name=filename_bg_source, bg_events=evt_per_jobs, bg_threads = num_threads_per_bg_generation)
  output:
    temp(expand('{VMCDIR}/macros/data/{{output_dir}}/Group_{{job_id}}_ParticleType_{{particle_type}}_SARR_{{id}}.mc.root', 
         VMCDIR=vmc_dir)),
    temp(expand('{VMCDIR}/macros/data/{{output_dir}}/Group_{{job_id}}_ParticleType_{{particle_type}}_SARR_{{id}}.params.root', 
         VMCDIR=vmc_dir)), 
    temp(expand('{VMCDIR}/macros/data/{{output_dir}}/Group_{{job_id}}_ParticleType_{{particle_type}}_SARR_{{id}}.digi.root', 
         VMCDIR=vmc_dir))
  resources:
    cpu=1
  params:
    evt_per_jobs = int(tot_events/num_threads_per_job),
    log_dir = log_dir,
    num_id = lambda wildcards: int(str(wildcards.id)),
    beam_rate = space_charge,
    parParameterFile = ParameterFile,
    RealB = 'true',
    job_id = lambda wildcards: wildcards.job_id
  shell:
    """
    NTOTAL={params.evt_per_jobs}
    SPLIT=$((NTOTAL*{params.num_id}))
    OUTPUT={wildcards.output_dir}/Group_{wildcards.job_id}_ParticleType_{wildcards.particle_type}_SARR_{wildcards.id}
    LOGDIR={params.log_dir}/${{OUTPUT}}
    mkdir -p {params.log_dir}/{wildcards.output_dir}
    root -b -q -l 'run_mc.C("'$OUTPUT'",'$NTOTAL',"","data/",kTRUE,"../macros/data/{wildcards.output_dir}/ParticleType_{wildcards.particle_type}_par.dat",'$SPLIT',"{input.digi}")' > ${{LOGDIR}}_mc.log
    root -b -q -l 'run_digi.C("'$OUTPUT'",{params.beam_rate},"{params.parParameterFile}")' > ${{LOGDIR}}_digi.log
    """

rule GenParForJob:
  input:
    vmc_dir + '/macros/data/' + dir_to_bg + '/' + filename_bg_source + '_evts%dx%d_Vertex.dat' % (evt_per_jobs, num_threads_per_bg_generation)
  output: 
    temp(expand('{VMCDIR}/macros/data/{{output_dir}}/ParticleType_{{particle_type}}_par.dat', VMCDIR=vmc_dir))
  run:
    os.makedirs(os.path.dirname(str(output)), exist_ok=True)
    particle_order = ParticleName.index(wildcards.particle_type)
    df_systems['VertexFile'].iloc[particle_order] = '../' + str(input).replace(vmc_dir, '')
    df_systems.iloc[particle_order].to_csv(str(output), sep='\t', header=False)


"""
rules for generating background mc events for embeding
"""

rule run_transport_mc:
  output:
    temp(expand('{VMCDIR}/macros/data/{{dir}}/{{filename}}_evts{{nevents}}_s{{id}}.mc.root', VMCDIR=vmc_dir)),
    temp(expand('{VMCDIR}/macros/data/{{dir}}/{{filename}}_evts{{nevents}}_s{{id}}.params.root', VMCDIR=vmc_dir)),
  resources:
    cpu=1
  params:
    filename_for_output = lambda wildcards: wildcards.filename.replace('/', '_'),
    log_dir = os.path.join(vmc_dir, 'macros', 'log'),
    run_num = lambda wildcards: int(wildcards.nevents),
    start_num =  lambda wildcards: int(wildcards.nevents)*int(str(wildcards.id)),
    pdg = '2212,1000010020,1000010030,1000020030,1000020040,211,-211',
  shell:
    """
    LOGDIR={params.log_dir}/{wildcards.dir}/{wildcards.filename}
    mkdir -p ${{LOGDIR}}
    root -b -q -l 'run_transport_mc.C("{wildcards.dir}/{wildcards.filename}_evts{wildcards.nevents}_s{wildcards.id}",
                                      {params.run_num},"","data/",
                                      kTRUE,{params.start_num},{{{params.pdg}}},
                                      "{wildcards.filename}.root")' > ${{LOGDIR}}_{wildcards.id}_mc.log
    """

rule run_transport_digi:
  input:
    expand('{VMCDIR}/macros/data/{{filename}}_evts{{nevents}}_s{{id}}.mc.root', VMCDIR=vmc_dir),
    expand('{VMCDIR}/macros/data/{{filename}}_evts{{nevents}}_s{{id}}.params.root', VMCDIR=vmc_dir)
  output:
    temp(expand('{VMCDIR}/macros/data/{{filename}}_evts{{nevents}}_s{{id}}.digi.root', VMCDIR=vmc_dir)),
  resources:
    cpu=1
  params:
    log_dir = os.path.join(vmc_dir, 'macros', 'log'),
    run_num = lambda wildcards: int(wildcards.nevents),
    start_num =  lambda wildcards: int(wildcards.nevents)*int(str(wildcards.id)),
    space_charge = space_charge
  shell:
    """
    LOGDIR={params.log_dir}/{wildcards.filename}
    mkdir -p ${{LOGDIR}}
    root -b -q -l 'run_digi.C("{wildcards.filename}_evts{wildcards.nevents}_s{wildcards.id}",
                              {params.space_charge},
                              "ST.parameters.fullmc.par",true,
                              10.2,
                              "{wildcards.filename}_evts{wildcards.nevents}_s{wildcards.id}")' > ${{LOGDIR}}_{wildcards.id}_digi.log
    """

rule run_transport_reco:
  input:
    expand('{VMCDIR}/macros/data/{{filename}}_evts{{nevents}}_s{{id}}.digi.root', VMCDIR=vmc_dir),
  output:
    expand('{VMCDIR}/macros/data/{{filename}}_evts{{nevents}}_s{{id}}_s0.reco.v1.04.root', VMCDIR=vmc_dir),
    expand('{VMCDIR}/macros/data/{{filename}}_evts{{nevents}}_s{{id}}_s0.reco.v1.04.conc.root', VMCDIR=vmc_dir)
  resources:
    cpu=1
  params:
    log_dir = os.path.join(vmc_dir, 'macros', 'log'),
    run_num = lambda wildcards: int(wildcards.nevents),
    start_num =  lambda wildcards: int(wildcards.nevents)*int(str(wildcards.id)),
    length=150
  shell:
    """
    LOGDIR={params.log_dir}/{wildcards.filename}
    root -b -q -l 'run_reco_mc.C("{wildcards.filename}_evts{wildcards.nevents}_s{wildcards.id}","{wildcards.filename}_evts{wildcards.nevents}_s{wildcards.id}")' > ${{LOGDIR}}_{wildcards.id}_reco.log
    """

def get_digi_from_name(wcs):
  return [vmc_dir + '/macros/data/' + wcs.filename + '_evts' + wcs.nevents + '_s%d' % id + '.digi.root' for id in range(int(wcs.num))]


rule merge_digi:
  input:
    files = get_digi_from_name,
  output:
    expand('{VMCDIR}/macros/data/{{filename}}_evts{{nevents}}x{{num}}_merged.digi.root', VMCDIR=vmc_dir)
  params:
    prefix = lambda wildcards: vmc_dir + '/macros/data/' + wildcards.filename + '_evts' + wildcards.nevents + '_s',
    suffix = lambda wildcards, input: str(input).replace(vmc_dir + '/macros/data/' + wildcards.filename + '_evts' + wildcards.nevents + '_s', '')
  shell:
    """
    input_list="{params.suffix}"
    input_list=$( echo ${{input_list// /\\\",\\\"}} )
    (root -b -l -q 'submissionScript/hadd_digi.C("{output}","{params.prefix}",{{"'${{input_list}}'"}})' || true) | grep "File Closed Code 0000"
    exit $?  
    """

def get_concs_from_name(wcs):
  return [vmc_dir + '/macros/data/' + wcs.filename + '_evts' + wcs.nevents + '_s%d' % id + '_s0.reco.v1.04.conc.root' for id in range(int(wcs.num))]


rule get_vertex:
  input:
    files = get_concs_from_name,
  output:
    expand('{VMCDIR}/macros/data/{{filename}}_evts{{nevents}}x{{num}}_Vertex.dat', VMCDIR=vmc_dir)
  params:
    prefix = lambda wildcards: vmc_dir + '/macros/data/' + wildcards.filename + '_evts' + wildcards.nevents + '_s',
    suffix = lambda wildcards, input: str(input.files).replace(vmc_dir + '/macros/data/' + wildcards.filename + '_evts' + wildcards.nevents + '_s', '').replace('_s0.reco.v1.04.conc.root', '_*conc*')
  shell:
    """
    input_list="{params.suffix}"
    input_list=$( echo ${{input_list// /\\\",\\\"}} )
    root -b -l -q 'submissionScript/GetVertex.C("{output}","{params.prefix}",{{"'${{input_list}}'"}})'
    sleep 3
    """

